Create tables, Alter tables

CREATE TABLE Employee (
EmpID int, 
Firstname varchar(255), 
Lastname varchar(255),
Address varchar(255));



Select * from person.person

SELECT Firstname, Lastname INTO dbo.Employee2 FROM person.person

SELECT * FROM dbo.Employee2

SELECT Firstname, Lastname INTO dbo.Employee2 FROM person.person
WHERE Firstname like '%jon%'

SELECT * FROM dbo.Employee2

ALTER TABLE dbo.Employee2
ADD Address varchar(255)

ALTER TABLE dbo.Employee2
DROP column Address

ALTER TABLE dbo.Employee2
ADD Address1 varchar(255)

ALTER TABLE dbo.Employee2
alter column Address1 int

TRUNCATE TABLE dbo.Employee

SELECT * FROM dbo.Employee

DROP TABLE dbo.Employee

SELECT * FROM dbo.Employee

CREATE TABLE Employee (
EmpID int NOT NULL,
Firstname varchar(255),
Lastname varchar(255),
Address varchar(255))

ALTER TABLE dbo.Employee
ALTER column firstname varchar(255) NOT NULL
alter column Lastname varchar(255) NOT NULL

ALTER TABLE dbo.Employee
alter column Lastname varchar(255) NOT NULL

ALTER TABLE dbo.Employee
alter column EmpID varchar(255) NOT NULL

